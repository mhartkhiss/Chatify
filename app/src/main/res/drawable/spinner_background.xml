<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Spinner pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3C3C3C" /> <!-- Background color when pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Spinner default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3C3C3C" /> <!-- Default background color -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="#3C3C3C" /> <!-- Border color -->
        </shape>
    </item>

</selector>
